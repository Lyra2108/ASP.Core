@model Movie
@{
    ViewData["Title"] = "Movie - Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered">
    <tr>
        <th>Genre</th>
        <td>@Model.Genre.Name</td>
    </tr>
    <tr>
        <th>Release Date</th>
        <td>@Model.ReleaseDate</td>
    </tr>
    <tr>
        <th>Release Date</th>
        <td>@Model.ReleaseDate</td>
    </tr>
    <tr>
        <th>Date added</th>
        <td>@Model.DateAdded</td>
    </tr>
    <tr>
        <th>Number in stock</th>
        <td>@Model.NumberInStock</td>
    </tr>
</table>
